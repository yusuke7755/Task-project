<h4>マイプロフィール編集</h4>
<p>パスワード変更がない場合も、再入力をお願いします。</p>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |form| %>

    <div class="user_list">
      <p><%= form.label :name %></p>
      <p><%= form.text_field :name %></p>
    </div>

    <div class="user_list">
      <p><%= form.label :email %><p>
      <p><%= form.email_field :email %></p>
    </div>

    <div class="user_list">
      <p><%= form.label :password %></p>
      <p><%= form.password_field :password %></p>
    </div>

    <div class="user_list">
      <p><%= form.label :password_confirmation %></p>
      <p><%= form.password_field :password_confirmation %></p>
    </div>
    
  <p><%= form.submit "更新する" %></p>
<% end %>

<button type="button" class="btn btn-info btn-sm"><%= link_to "マイページに戻る", user_path(current_user.id) %></button>